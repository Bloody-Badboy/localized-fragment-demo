<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LocalizedFragment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowBackground">#D1C4E9</item>
    </style>

    <style name="Theme.LocalizedFragment.Red" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryVariant">#D32F2F</item>

        <item name="colorSecondary">#F44336</item>
        <item name="colorSecondaryVariant">#D32F2F</item>

        <item name="android:windowBackground">#EF9A9A</item>
    </style>

    <style name="Theme.LocalizedFragment.Yellow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryVariant">#FFA000</item>

        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFA000</item>

        <item name="android:windowBackground">#FFF59D</item>
    </style>

    <style name="Theme.LocalizedFragment.Green" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>

        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">#388E3C</item>

        <item name="android:windowBackground">#A5D6A7</item>
    </style>

    <style name="Theme.LocalizedFragment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LocalizedFragment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>